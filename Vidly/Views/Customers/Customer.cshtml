@model Vidly.ViewModel.CustomersViewModel
@{
    ViewBag.Title = "Customer";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Customers</h1>

@if (Model.Customers.Count == 0)
{
    <text>We don't have any customer yet.</text>
}
else
{
    <table class="table table-bordered table-hover">
        <tr>
            <th>Customer</th>
        </tr>
        <tr>
            <td>@Html.ActionLink("John Smith", "details", "Customers", new { id = 1 }, null)</td>
        </tr>
        <tr>
            <td>@Html.ActionLink("Mary Williams", "details", "Customers", new { id = 2 }, null)</td>
        </tr>
    </table>
}
